# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API Key
COHERE_API_KEY=your_cohere_api_key_here

# Azure OpenAI (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here

# HuggingFace API Key (if using HF models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Pinecone API Key (if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Tavily API Key (for web search tool - optional)
TAVILY_API_KEY=tvly-your-key-here

# Admin Authentication (optional - default: admin123)
# Set a custom admin code to protect UI settings
ADMIN_CODE=admin123

# Email Tool Configuration (optional)
# For SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# For SendGrid API
SENDGRID_API_KEY=SG.your-sendgrid-key-here

# AWS Credentials (if deploying to AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Azure Credentials (if deploying to Azure)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here
